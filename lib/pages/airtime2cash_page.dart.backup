  }

  Widget _buildStepIndicator() {
    return Row(
      children: [
        _buildStepBubble(1, _currentStep >= 0),
        Expanded(
          child: Container(
            height: 2,
            color: _currentStep >= 1
                ? const Color(0xFFce4323)
                : Colors.grey.shade300,
          ),
        ),
        _buildStepBubble(2, _currentStep >= 1),
        Expanded(
          child: Container(
            height: 2,
            color: _currentStep >= 2
                ? const Color(0xFFce4323)
                : Colors.grey.shade300,
          ),
        ),
        _buildStepBubble(3, _currentStep >= 2),
      ],
    );
  }

  Widget _buildStepBubble(int step, bool isActive) {
    return Container(
      width: 40,
      height: 40,
      decoration: BoxDecoration(
        shape: BoxShape.circle,
        color: isActive ? const Color(0xFFce4323) : Colors.grey.shade300,
      ),
      child: Center(
        child: Text(
          step.toString(),
          style: TextStyle(
            color: Colors.white,
            fontWeight: FontWeight.w700,
            fontSize: 16,
          ),
        ),
      ),
    );
  }


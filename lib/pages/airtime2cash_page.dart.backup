import 'package:flutter/material.dart';
import 'package:http/http.dart' as http;
import 'dart:convert';
import 'package:shared_preferences/shared_preferences.dart';
import '../services/api_service.dart';
import '../utils/network_utils.dart';

class Airtime2CashPage extends StatefulWidget {
  const Airtime2CashPage({super.key});

  @override
  State<Airtime2CashPage> createState() => _Airtime2CashPageState();
}

class _Airtime2CashPageState extends State<Airtime2CashPage> {
  final _formKey = GlobalKey<FormState>();

  // Network selection
  String? _selectedNetwork;
  final List<Map<String, dynamic>> _networks = [
    {'id': '1', 'name': 'MTN', 'code': 'mtn'},
    {'id': '2', 'name': 'Airtel', 'code': 'airtel'},
    {'id': '3', 'name': 'Glo', 'code': 'glo'},
    {'id': '4', 'name': '9mobile', 'code': '9mobile'},
  ];

  // Amount input
  final _amountController = TextEditingController();

  // UI state
  bool _isLoading = false;
  bool _isVerifying = false;
  String? _error;

  // Verification state
  String? _phoneNumberToReceiveAirtime;
  String? _verificationStatus;

  // Step tracking
  int _currentStep =
      0; // 0: Network selection, 1: Verify, 2: Amount input, 3: Confirm transfer

  @override
  void dispose() {
    _amountController.dispose();
    super.dispose();
  }

  Future<void> _verifyService() async {
    if (_selectedNetwork == null) {
      _showError('Please select a network');
      return;
    }

    setState(() {
      _isVerifying = true;
      _error = null;
    });

    try {
      final prefs = await SharedPreferences.getInstance();
      final userId = prefs.getString('user_id');

      if (userId == null) {
        throw Exception('User not logged in');
      }

      final selectedNet = _networks.firstWhere(
        (n) => n['id'] == _selectedNetwork,
      );

      final response = await http
          .post(
            Uri.parse('${ApiService.baseUrl}/api/a2cverify'),
            headers: {'Content-Type': 'application/json'},
            body: json.encode({
              'user_id': userId,
              'network': selectedNet['code'],
            }),
          )
          .timeout(const Duration(seconds: 15));

      if (response.statusCode == 200) {
        final data = json.decode(response.body);

        if (data['status'] == 'success') {
          setState(() {
            _phoneNumberToReceiveAirtime = data['data']['phone_number'];
            _verificationStatus = data['data']['status'];
            _currentStep = 1;
            _error = null;
          });

          if (_phoneNumberToReceiveAirtime == null ||
              _phoneNumberToReceiveAirtime!.isEmpty) {
            _showError('Failed to retrieve phone number. Please try again.');
            setState(() => _currentStep = 0);
          }
        } else {
          _showError(data['message'] ?? 'Verification failed');
          setState(() => _currentStep = 0);
        }
      } else {
        // Try to show server response body for debugging (helps reveal router parsing)
        try {
          final body = json.decode(response.body);
          final msg = body['message'] ?? body.toString();
          _showError('Server error: ${response.statusCode} - $msg');
        } catch (_) {
          _showError('Server error: ${response.statusCode} - ${response.body}');
        }
        setState(() => _currentStep = 0);
      }
    } catch (e) {
      _showError('Error: ${e.toString()}');
      setState(() => _currentStep = 0);
    } finally {
      setState(() => _isVerifying = false);
    }
  }

  Future<void> _submitConversion() async {
    if (!_formKey.currentState!.validate()) return;

    setState(() {
      _isLoading = true;
      _error = null;
    });

    try {
      final prefs = await SharedPreferences.getInstance();
      final userId = prefs.getString('user_id');
      final userData = prefs.getString('user_data');

      if (userId == null) {
        throw Exception('User not logged in');
      }

      final user = json.decode(userData ?? '{}');
      final userPhone = user['sPhone'] ?? '';

      final selectedNet = _networks.firstWhere(
        (n) => n['id'] == _selectedNetwork,
      );
      final amount = double.parse(_amountController.text);

      // Generate unique transaction reference
      final reference =
          'A2C-${DateTime.now().millisecondsSinceEpoch}-${userId}';

      final response = await http
          .post(
            Uri.parse('${ApiService.baseUrl}/api/a2cconvert'),
            headers: {'Content-Type': 'application/json'},
            body: json.encode({
              'user_id': userId,
              'user_phone': userPhone,
              'network': selectedNet['code'],
              'amount': amount,
              'reference': reference,
              'site_phone': _phoneNumberToReceiveAirtime,
            }),
          )
          .timeout(const Duration(seconds: 15));

      if (response.statusCode == 200) {
        final data = json.decode(response.body);

        if (data['status'] == 'success') {
          // Show success dialog
          _showSuccessDialog(reference, amount);

          // Reset form
          setState(() {
            _selectedNetwork = null;
            _amountController.clear();
            _phoneNumberToReceiveAirtime = null;
            _currentStep = 0;
          });
        } else {
          _showError(data['message'] ?? 'Conversion failed');
        }
      } else {
        _showError('Server error: ${response.statusCode}');
      }
    } catch (e) {
      _showError('Error: ${e.toString()}');
    } finally {
      setState(() => _isLoading = false);
    }
  }

  void _showError(String message) {
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text(message),
        backgroundColor: Colors.red.shade600,
        duration: const Duration(seconds: 5),
      ),
    );
  }


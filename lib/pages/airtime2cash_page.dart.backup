  Color _getNetworkColor(String network) {
    switch (network) {
      case 'MTN':
        return Colors.yellow.shade700;
      case 'Airtel':
        return Colors.red.shade600;
      case 'Glo':
        return Colors.green.shade600;
      case '9mobile':
        return Colors.blue.shade600;
      default:
        return Colors.grey;
    }
  }
